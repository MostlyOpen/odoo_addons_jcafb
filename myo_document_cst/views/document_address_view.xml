<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_document_address_view_form" model="ir.ui.view">
            <field name="name">myo.document.address.form</field>
            <field name="model">myo.document.address</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Document Addresses" version="7.0">
                    <sheet>
                        <group>
                            <field name="document_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="address_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="role" default_focus="1" options="{'no_open': False, 'no_create': True}"/>
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" placeholder="Notes..."/>
                        <notebook>
                            <page string="Settings" groups="myo_base.group_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_document_address_view_tree" model="ir.ui.view">
            <field name="name">myo.document.address.tree</field>
            <field name="model">myo.document.address</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Document Addresses">
                    <field name="document_id"/>
                    <field name="address_id"/>
                    <field name="role"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_document_address_view_search" model="ir.ui.view">
            <field name="name">myo.document.address.search</field>
            <field name="model">myo.document.address</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Document Addresses">
                    <field name="document_id"/>
                    <field name="address_id"/>
                    <field name="role"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Document" domain="[]" context="{'group_by':'document_id'}"/>
                        <filter string="Person" domain="[]" context="{'group_by':'address_id'}"/>
                        <filter string="Person Role" domain="[]" context="{'group_by':'role'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="myo_document_address_action" model="ir.actions.act_window">
            <field name="name">Document Addresses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.document.address</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_document_address_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new document address.
              </p>
            </field>
        </record>
        
        <record id="myo_document_view_form_address" model="ir.ui.view">
            <field name="name">myo.document.form</field>
            <field name="model">myo.document</field>
            <field name="inherit_id" ref="myo_document.myo_document_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Addresses">
                        <field name="address_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

        <record id="myo_address_view_form_document_address" model="ir.ui.view">
            <field name="name">myo.address.form</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Documents">
                        <field name="document_address_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
